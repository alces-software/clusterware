[Unit]
Description=Apply clusterware configuration
Requires=cloud-final.service
After=cloud-final.service

[Service]
Type=oneshot
Environment=PLUGIN_PATH=/opt/clusterware/etc/handlers
ExecStart=/opt/clusterware/opt/pluginhook/bin/pluginhook configure
RemainAfterExit=yes
TimeoutSec=0

# Output needs to appear in instance console output
StandardOutput=journal+console

[Install]
WantedBy=multi-user.target
