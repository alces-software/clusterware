export alces_BASE="/opt/clusterware"
export PLUGIN_PATH="${alces_BASE}/etc/handlers"

if [ "$SERF_EVENT" = "user" ]; then
    EVENT="user-$SERF_USER_EVENT"
elif [ "$SERF_EVENT" = "query" ]; then
    EVENT="query-$SERF_QUERY_NAME"
else
    EVENT=$SERF_EVENT
fi

${alces_BASE}/opt/pluginhook/bin/pluginhook $EVENT
