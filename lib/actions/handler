action=$1
shift
alces_BINNAME="${alces_BINNAME} $(basename "$0")"

case $action in
    h|he|hel|help)
        exec /bin/bash $alces_BASE/lib/handler/bin/help "$@"
        ;;
    e|en|ena|enab|enabl|enable)
        exec /bin/bash $alces_BASE/lib/handler/bin/enable "$@"
        ;;
    ls|l|li|lis|list)
        exec /bin/bash $alces_BASE/lib/handler/bin/list "$@"
        ;;
    d|di|dis|disa|disab|disabl|disable)
        exec /bin/bash $alces_BASE/lib/handler/bin/disable "$@"
        ;;
#    i|in|inf|info)
#        exec /bin/bash $alces_BASE/lib/handler/bin/info "$@"
#        ;;
    u|up|upd|upda|updat|update)
        exec /bin/bash $alces_BASE/lib/handler/bin/update "$@"
        ;;
    *)
        cat <<EOF
Usage: $alces_BINNAME COMMAND [[OPTION]... [ARGS]]
Install and manage node handlers.

Commands:
EOF
printf "  %-20s  %s\n" "$alces_BINNAME help" "More help about this command."
printf "  %-20s  %s\n" "$alces_BINNAME list" "List installed/available handlers."
printf "  %-20s  %s\n" "$alces_BINNAME enable" "Enable a handler from a repository."
printf "  %-20s  %s\n" "$alces_BINNAME disable" "Disable a handler."
#printf "  %-20s  %s\n" "$alces_BINNAME info" "Show information about a handler."
printf "  %-20s  %s\n" "$alces_BINNAME update" "Update handler repository."
cat <<EOF

Please report bugs to support@alces-software.com
Alces Software home page: <http://alces-software.com/>
EOF
esac
