BINDIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && echo "$PWD")
LIBDIR=$(cd "${BINDIR}"/../../functions && echo "$PWD")

source "$LIBDIR"/base.functions.sh
source "$LIBDIR"/hook.functions.sh

main() {
    local handler repo
    handler="$1"
    if [[ $handler == *"/"* ]]; then
	repo="${handler%%/*}"
	handler="${handler#*/}"
    else
	repo="${HANDLER_DEFAULT_REPO}"
    fi

    if [ -z "$handler" ]; then
	say "handler not specified"
	bail 1
    elif ! handler_repo_exists "${repo}"; then
	say "handler repository was not found: $repo"
	bail 1
    elif ! handler_exists "${repo}/${handler}"; then
	say "handler not found: $repo/$handler"
	bail 1
    elif handler_is_enabled "${handler}"; then
	say "handler already enabled: ${handler}"
	bail 1
    fi
    handler_enable "${repo}/${handler}"
    say "enabled handler: ${repo}/${handler} -> ${handler}"
    cleanup
}

reexec_sudo "$@"
main "$@"
