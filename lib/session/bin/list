BINDIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && echo "$PWD")
LIBDIR=$(cd "${BINDIR}"/../lib && echo "$PWD")
LIBEXECDIR=$(cd "${BINDIR}"/../libexec && echo "$PWD")
SHAREDIR=$(cd "${BINDIR}"/../share && echo "$PWD")

source "$LIBDIR"/base.functions.sh
source "$LIBDIR"/vnc.functions.sh

cleanup() {
  :
}

main() {
    local pidfile sessiondir sessionid shortid h
    local -A vnc
    for sessiondir in "${SESSIONSDIR}"/*; do
	if [ -d "$sessiondir" ]; then
	    if [ ! "$h" ]; then
		h=true
		echo "+----------+---------+------+----------+-------------------------------------------------------+"
		echo "| Identity | Display | Port | Password | URL                                                   |"
		echo "+----------+---------+------+----------+-------------------------------------------------------+"
	    fi
	    pidfile="$sessiondir"/vncserver.pid
	    sessionid=$(basename "$sessiondir")
	    shortid=$(echo "$sessionid" | cut -f1 -d'-')

	    if [ -f "${sessiondir}/starting.txt" ]; then
		echo "| ${shortid} | $(printf %7s 'STARTUP') |    - |        - | -                                                     |"
	    elif pgrep -F $pidfile &>/dev/null; then
		. "${sessiondir}"/metadata.vars.sh
		echo "| ${shortid} | $(printf "%7s" :${vnc[DISPLAY]}) | ${vnc[PORT]} | ${vnc[PASSWORD]} | $(printf %-53s "vnc://${USER}:${vnc[PASSWORD]}@${vnc[ADDRESS]}:${vnc[PORT]}") |"
	    else
		echo "| ${shortid} | $(printf %7s '-DEAD-') |    - |        - | -                                                     |"
	    fi
	else
	    say "No sessions found in $SESSIONSDIR."
	fi
    done
    if [ "$h" ]; then
  	echo "+----------+---------+------+----------+-------------------------------------------------------+"
    fi
    cleanup
}

trap "cleanup" SIGTERM SIGINT

SESSIONSDIR="${XDG_CACHE_HOME:-$HOME/.cache}/clusterware/sessions"

main
