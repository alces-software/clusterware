require action

main() {
    action=$1
    shift

    case $action in
        help|node)
            help_for_${action}
            ;;
        ?*)
            echo "${cw_BINNAME}: no such topic: ${action}"
            echo ""
            general_help
            ;;
        *)
            general_help
            ;;
    esac
}

help_for_node() {
    cat <<EOF
  SYNOPSIS:

    alces about node

  DESCRIPTION:

    Display information about the networking and software
    configuration of this node/instance.

EOF
}

help_for_help() {
    cat <<EOF
  SYNOPSIS:

    alces about help [<command>]

  DESCRIPTION:

    Get help with about commands.  If no <command> is specified,
    show some general help.

EOF
}

general_help() {
    local binname
    binname="${cw_BINNAME% *}"
    cat <<EOF
  NAME:

    ${binname}

  DESCRIPTION:

    Information about the Clusterware configuration of this system.

  COMMANDS:

EOF
printf "    %-22s  %s\n" "$binname help" "More help about this command."
printf "    %-22s  %s\n" "$binname node" "Display information about this node/instance."
cat <<EOF

Please report bugs to support@alces-software.com
Alces Software home page: <http://alces-software.com>
EOF
}

main "$@"
