BINDIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && echo "$PWD")
LIBDIR=$(cd "${BINDIR}"/../lib && echo "$PWD")

source "$LIBDIR"/base.functions.sh
source "$LIBDIR"/hook.functions.sh

take_screenshot() {
    local display
    display=$1
    xwd -root -silent -display :${display} | xwdtopnm | pnmtopng | base64
}

main() {
    local display sessionid
    display="$1"
    sessionid="$2"
    check_progs base64 xwd xwdtopnm pnmtopng
    # Give the session a chance to start first.
    sleep 10
    while true; do
        say "$(date --rfc-3339=seconds): Taking screenshot"
        take_screenshot $display | hook_run session-screenshot "$sessionid"
        sleep 60
    done
}

main "$@"
