require action
require vnc

main() {
    if vnc_no_sessions; then
        action_warn "no sessions found in $cw_VNC_SESSIONSDIR"
    else
        echo "+----------+---------+------+----------+-------------------------------------------------------+"
        echo "| Identity | Display | Port | Password | URL                                                   |"
        echo "+----------+---------+------+----------+-------------------------------------------------------+"
	row() {
	    local pidfile sessionid shortid
	    local -A vnc
	    sessiondir="$1"
            pidfile="$sessiondir"/vncserver.pid
            sessionid=$(basename "$sessiondir")
            shortid=$(echo "$sessionid" | cut -f1 -d'-')

            if [ -f "${sessiondir}/starting.txt" ]; then
                echo "| ${shortid} | $(printf %7s 'STARTUP') |    - |        - | -                                                     |"
            elif pgrep -F $pidfile &>/dev/null; then
                . "${sessiondir}"/metadata.vars.sh
                echo "| ${shortid} | $(printf "%7s" :${vnc[DISPLAY]}) | ${vnc[PORT]} | ${vnc[PASSWORD]} | $(printf %-53s "vnc://${USER}:${vnc[PASSWORD]}@${vnc[HOST]}:${vnc[PORT]}") |"
            else
                echo "| ${shortid} | $(printf %7s '-DEAD-') |    - |        - | -                                                     |"
            fi
	}
	vnc_each_sessiondir row
        echo "+----------+---------+------+----------+-------------------------------------------------------+"
    fi
    action_cleanup
}

main
