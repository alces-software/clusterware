require action
require git
require storage
require ui
require process

main() {
    local repo url
    if [ "$1" ]; then
        repo="$1"
        url="$2"
    else
        repo="${cw_STORAGE_DEFAULT_REPO}"
        url="${cw_STORAGE_DEFAULT_REPO_URL}"
    fi

    if [ ! -d "${cw_STORAGE_REPODIR}/${repo}" ]; then
        if [ -z "$url" ]; then
            say "no repository URL was specified for repo: $1"
            bail 1
        fi
        echo "Initializing storage backends: ${repo}"
        doing 'Clone'
        git_clone "${url}" "${cw_STORAGE_REPODIR}/${repo}"
        say_done $?
    else
        echo "Updating storage backends: ${repo}"
        doing 'Update'
        git_update "${cw_STORAGE_REPODIR}/${repo}"
        say_done $?
    fi
    action_cleanup
}

process_reexec_sudo "$@"
main "$@"
